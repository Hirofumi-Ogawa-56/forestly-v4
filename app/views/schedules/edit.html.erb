    <div class="max-w-4xl mx-auto">
      <h3 class="text-sm font-bold text-blue-600 mb-4 uppercase tracking-widest">Edit Schedule</h3>
      <%= render 'components/schedule_form', schedule: @schedule %>
    </div>
  </div>
<% end %>